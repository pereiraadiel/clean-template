{
  "compilerOptions": {
    "target": "es2017",                          
    "module": "commonjs",                     
    "outDir": "./dist",                        
    "rootDir": "./src",                       
    "strict": false,                           
    "strictPropertyInitialization": false,  
    "removeComments": true,
    "allowJs": true,                     
    "baseUrl": "./src",
    "paths": {
      "@modules/*":["modules/*"],
      "@config/*":["config/*"],
      "@shared/*":["shared/*"]
    },
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  }
}